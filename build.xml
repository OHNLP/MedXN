<project name="MedXN Build" default="dist" basedir=".">
    <description>
        Build file for creating MedXN releases, to be run after maven
    </description>
    <property name="dist" location="dist"/>

    <target name="init">
        <!-- Create the build directory structure used by compile -->
        <mkdir dir="${dist}"/>
    </target>


    <target name="dist"
            description="generate the distribution">
        <copydir src="src/main/resources" dest="${dist}/resources"/>
        <copy file="target/medxn.jar" tofile="${dist}/MedXN.jar"/>
        <copy file="runMedXNCPE.bat" tofile="${dist}/runMedXNCPE.bat"/>
        <copy file="runMedXNCPE.sh" tofile="${dist}/runMedXNCPE.sh"/>
        <copy file="runMedXNCVD.bat" tofile="${dist}/runMedXNCVD.bat"/>
        <copy file="runMedXNCVD.sh" tofile="${dist}/runMedXNCVD.sh"/>

        <zip basedir="${dist}" destfile="MedXN.zip"/>
        <delete dir="${dist}"/>

    </target>
</project>
